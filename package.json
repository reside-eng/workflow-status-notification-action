{
  "name": "@side/workflow-status-notification-action",
  "version": "0.0.0-development",
  "description": "Github Action workflow failure/success notification.",
  "main": "dist/index.js",
  "engines": {
    "node": "^16"
  },
  "scripts": {
    "prepare": "husky install",
    "build:docs": "ts-node bin/generate-docs.ts && prettier --write README.md",
    "build": "rimraf dist && ncc build src/index.ts && yarn build:docs",
    "lint": "eslint . --ignore-pattern='!.eslintrc.js' --ext .ts,.js",
    "types": "tsc --noEmit",
    "test": "export GITHUB_REPOSITORY='reside-eng/workflow-status-notification-action' && yarn tsc && jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reside-eng/workflow-status-notification-action"
  },
  "keywords": [
    "actions",
    "workflow",
    "slack notification"
  ],
  "author": "Side",
  "license": "MIT",
  "private": false,
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@side/commitlint-config": "0.1.10",
    "@side/eslint-config-base": "0.11.6",
    "@side/eslint-config-jest": "0.3.16",
    "@tsconfig/node16": "1.0.3",
    "@types/jest": "27.5.2",
    "@types/js-yaml": "4.0.5",
    "@types/node": "16.18.3",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "@vercel/ncc": "0.34.0",
    "eslint": "7.32.0",
    "eslint-plugin-jsdoc": "38.1.6",
    "husky": "8.0.1",
    "jest": "27.5.1",
    "js-yaml": "4.1.0",
    "lint-staged": "13.0.3",
    "nock": "13.2.9",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.5",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "@actions/cache": "1.0.11",
    "@actions/core": "1.10.0",
    "@actions/exec": "1.1.1",
    "@actions/github": "5.1.1",
    "got": "^11.8.2"
  }
}
